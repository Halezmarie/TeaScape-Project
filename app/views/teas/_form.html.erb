
<%= render partial: 'layouts/errors', locals: {object: @tea}  %>

<%= form_with model: [brand, tea]  do |f| %>

 <%= f.hidden_field :user_id, value: current_user.id %>
    <% if brand %>
        <%= f.hidden_field :brand_id, value: brand.id %>
    <% end %>

<br><br>



<div>
    <%= f.label :flavor %>
    <%= f.text_field :flavor %>
</div>
<br><br>

<div>
    <%= f.label :type %>
    <%= f.text_field :type %>
</div>

  <br><br>
<div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br><br>
</div>

    <%= f.submit %>
<%end%>