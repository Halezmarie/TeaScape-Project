<h1> Let's make a new TeaScape review! </h1>

<%= form_for(@review) do |f|%>


  <div>
    <%= f.label :stars %>
    <%= f.number_field :stars, min:0, max:10 %>
  </div>
  <br>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :text %>
    <%= f.text_area :text, size: "50x10" %>
  </div>
  <br>



  <%= f.submit %>
<% end %>