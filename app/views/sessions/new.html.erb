<p><%= flash[:error] %></p>

<h1>Welcome to TeaScape!</h1>
<%= form_with url: login_path do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit 'Log In' %>
<% end %>

<h2>Login with Google:</h2>

<%= button_to 'Click to login with Google', '/auth/google_oauth2' %>


<h1> Or if you are a new member, sign up below! </h1>

<%=link_to "Signup", signup_path %>