<%= render partial: 'layouts/errors', locals: {object: @user}  %>

<h1>Do you want to become a TeaScape member? Sign up here!:</h1>

<%= form_for(@user, url: signup_path) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br><br>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br><br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br><br>
    <%= f.submit 'Sign Up' %>
<% end %>

<h2>Login with Google:</h2>

<%= button_to 'Click to login with Google', '/auth/google_oauth2' %>
